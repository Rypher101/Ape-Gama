@page "/login_customer"
@inject NavigationManager UriHelper

<div id="wrapper">
    <HomeHeader />
    <div class="main">
        <div class="row align-content-center" style="padding-top:70px; padding-bottom:70px">
            <div class="col-md-4 offset-4">
                <h2 class="h2"><center>Customer Login</center></h2>
                <form action="/" method="post">
                    <div class="form-group">
                        <input asp-for="UserEmail" type="email" class="form-control rounded-left" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <input asp-for="UserPass" type="password" class="form-control rounded-left" placeholder="Password" required>
                    </div>
                    <div class="form-group align-items-center">
                        <div class="justify-content-end">
                            <button class="primary" style="width:100%">Login</button>
                        </div>
                    </div>
                </form>
                <div class="align-items-center">
                    <h4 class="h4"><center><b>Or</b></center></h4>
                </div>
                <br />
                <button class="primary" style="width:100%" @onclick="@ToSignUp">Sign Up</button>
            </div>
        </div>
    </div>
    <HomeFooter></HomeFooter>
</div>
<NavMenu NavItem="LoginNav" />
@code {
    void ToSignUp()
    {
        UriHelper.NavigateTo("register_customer");
    }

}
